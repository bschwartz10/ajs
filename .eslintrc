{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "eqeqeq": [
      "error",
      "always"
    ],
    "getter-return": [
      "error",
      {
        "allowImplicit": true
      }
    ],
    "indent": [
      "warn",
      2
    ],
    "no-template-curly-in-string": "error",
    "react/prop-types": "ignore",
    "no-unused-vars": "error",
    "no-console": "error",
    "no-debugger": "error"
  },
  "globals": {
    "expect": true
  }
}